@using PhuKienDienThoai.Models
@model List<SanPham>

@if(Model.Count>0)
{
    <h2 class="title text-center"><span class="text-block">Sản phẩm cùng xuất xứ</span></h2>
    <div class="owl-carousel">   
    @foreach(var item in Model)
    {
        <div class="text-center">
            <a asp-action="index" asp-controller="SanPham" asp-route-id="@item.id" asp-route-TenSanPham="@item.TenSanPham.Replace(" ","-")">
                <img src="~/images/SanPham/@item.HinhAnh" class="center-block" alt="" style="height:100%; width:auto; max-height:130px">
                <h5>@item.TenSanPham</h5>
            </a>
        </div>
    }
    </div>
}