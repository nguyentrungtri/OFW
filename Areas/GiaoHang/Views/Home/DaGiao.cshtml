@using PhuKienDienThoai.Models
@model List<HoaDon>

@{
    ViewData["HeadTitle"]="Danh sách hóa đơn đã giao";
}

<section class="content-header">
    <h1>@ViewData["HeadTitle"]</h1>
</section>

<section>
    <div class="box">
        <div class="box-body">
            <table class="table table-responsive data-table">
                <thead>
                    <tr>
                        <th>Mã Hóa đơn</th>
                        <th>Địa chỉ</th>
                        <th>Tổng tiền</th>
                        <th>Ngày Giao</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.DiaChi</td>
                            <td>@item.TongThanhTien</td>
                            <td>@item.NgayGiao</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

@section Scripts
{
    <script>
    $(".data-table").DataTable();
    </script>
}